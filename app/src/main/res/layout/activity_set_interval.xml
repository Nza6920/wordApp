<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="example.loginsystem.activity.SetIntervalActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#e6e6e6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:padding="8dp">

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:background="#000"
            android:onClick="back"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:paddingTop="2dp"
            android:text="测试与错误间隔数"
            android:textColor="#fff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试单词数:"
            android:textSize="22sp"
            android:textColor="#000"
            android:padding="8dp" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"/>

        <Spinner
            android:id="@+id/id_spinner_testInterval"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_weight="0.39"
            android:overlapAnchor="false"
            android:dropDownWidth="223dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="错 误 间 隔 :"
            android:textSize="22sp"
            android:textColor="#000"
            android:padding="8dp"
            android:layout_weight="0.63" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"/>
        <Spinner
            android:id="@+id/id_spinner_errorInterval"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:overlapAnchor="false"
            android:dropDownWidth="223dp"
         />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_button"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="#fff"
        android:onClick="submit" />

</LinearLayout>
