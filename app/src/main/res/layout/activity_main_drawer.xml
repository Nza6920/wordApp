<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bfbfbf"/>

    <TextView
        android:id="@+id/id_textView_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bk_build"
        android:gravity="center"
        android:text="欢迎 pepsi."
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="32sp" />

    <Button
        android:id="@+id/id_button_myLibrary"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_height="38dp"
        android:layout_weight="0.08"
        android:background="@drawable/bg_text_cursor"
        android:onClick="myLibrary"
        android:padding="10dp"
        android:text="我的词库"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/id_button_myOption"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.19"
        android:background="@drawable/bg_text_cursor"
        android:onClick="option"
        android:padding="10dp"
        android:text="我的设置"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#fff" />

</LinearLayout>
