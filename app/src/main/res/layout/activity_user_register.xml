<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/id_register_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_logo" />

    <EditText
        android:id="@+id/id_register_username"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="请输入用户名"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:onClick="UserNameClicked"/>

    <EditText
        android:id="@+id/id_register_password"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:onClick="passwordCicked"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/id_register_verify"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="确认输入密码"
        android:inputType="textPassword"
        android:onClick="verifyClicked"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_button"
        android:text="确认注册"
        android:textColor="#fff"
        android:textSize="18sp"
        android:onClick="doRegister"/>
</LinearLayout>
