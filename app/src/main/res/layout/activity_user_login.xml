<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/id_login_logo"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/im_logo" />

    <EditText
        android:id="@+id/id_login_username"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="请输入用户名"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:onClick="usernameClieked" />

    <EditText
        android:id="@+id/id_login_password"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="请输入密码"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:onClick="passwordCicked" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_button"
        android:text="登陆"
        android:textSize="15sp"
        android:textColor="#fff"
        android:onClick="doLogin" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:text="还没有账号? 点此注册"
        android:textSize="15sp"
        android:textColor="#7BBCFC"
        android:background="#0000"
        android:gravity="center"
        android:onClick="doRegister" />
</LinearLayout>
